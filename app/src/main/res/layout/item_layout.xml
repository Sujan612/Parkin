<!-- res/layout/item_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="342dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="22dp"
    android:background="@drawable/round_button"
    android:backgroundTint="#d9dcd6"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/locnum"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:text="@string/location"
            />

        <TextView
            android:id="@+id/locationNumber"

            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:text="Location Number" />

    </LinearLayout>





    <TextView
        android:id="@+id/locationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/location_logo"/>

    <TextView
        android:id="@+id/locationAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Address"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/locationDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/locationPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="14sp"/>
</LinearLayout>
